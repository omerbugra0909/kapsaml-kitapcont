@model List<kapsamlıkitapcont.Models.Kitap>

<h2>Kitap Listesi</h2>

<a asp-action="Create" class="btn btn-success mb-3">Yeni Kitap Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Yazar</th>
            <th>Yıl</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kitap in Model)
        {
            <tr>
                <td>@kitap.Id</td>
                <td>@kitap.Ad</td>
                <td>@kitap.Yazar</td>
                <td>@kitap.YayinYili</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@kitap.Id" class="btn btn-primary">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@kitap.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

